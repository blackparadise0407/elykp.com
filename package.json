{
	"private": "true",
	"name": "elykp",
	"workspaces": [
		"packages/*"
	],
	"author": {
		"name": "Kyle Pham",
		"email": "blackparadise0407@gmail.com",
		"url": "https://elykp.com"
	},
	"license": "UNLICENSED",
	"engineStrict": true,
	"engines": {
		"node": ">=16",
		"yarn": ">=1.22.19"
	},
	"scripts": {
		"prepare": "husky install",
		"identity:dev": "docker-compose -f ./packages/identity/docker-compose.yml up -d --build",
		"client:dev": "yarn workspace client dev",
		"client:test": "yarn workspace client test",
		"api:dev": "yarn workspace api start:dev",
		"api:test": "yarn workspace api test",
		"start:dev": "concurrently --kill-others-on-fail \"yarn:identity:dev\" \"yarn:client:dev\" \"yarn:api:dev\"",
		"test": "concurrently --kill-others-on-fail \"yarn:client:test\" \"yarn:api:test\"",
		"lint": "prettier --write \"packages/**/src/*.{ts,svelte,html}\" && eslint ."
	},
	"dependencies": {},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.50.0",
		"@typescript-eslint/parser": "^5.50.0",
		"concurrently": "^7.6.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.1",
		"prettier": "^2.8.3",
		"prettier-plugin-svelte": "^2.9.0"
	},
	"lint-staged": {
		"*.{ts,svelte}": [
			"eslint",
			"git add"
		]
	}
}